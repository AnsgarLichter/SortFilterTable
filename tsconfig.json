{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "com/lichter/mobilesortfilter/*": [
        "webapp/*"
      ]
    },
    // TODO: THIS IS IT - transformDependencies is set to true if a dep has a "ui5.yaml" file
    "types": [ "@sapui5/ts-types-esm", "com.lichter.lib" ]
  },
  "include": [
    "webapp/**/*"
  ]
}