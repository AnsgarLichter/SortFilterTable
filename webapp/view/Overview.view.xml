<mvc:View 
    controllerName="com.lichter.mobilesortfilter.controller.Overview"
    xmlns="sap.m"
    xmlns:cc="com.lichter.mobilesortfilter.control"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    <Page id="page"
        title="{i18n>title}">
        <content>

            <cc:SortFilterTable 
                title="Formula 1 Drivers"
                items="{
                    path: 'data>/drivers',
                    sorter: {
                        path: 'name'
                    }
                }"
                autoPopinMode="true">
                <!-- <cc:headerToolbar>
                    <OverflowToolbar>
                        <Title text="Formula 1 Drivers"
                            level="H2" />
                        <ToolbarSpacer />
                        <Button press="onOpenSortDialogPressed"
                            icon="sap-icon://sort"
                            tooltip="Sort" />
                        <Button press="onOpenFilterDialogPressed"
                            icon="sap-icon://filter"
                            tooltip="Filter" />
                    </OverflowToolbar>
                </cc:headerToolbar> -->
                <cc:columns>
                    <cc:SortFilterColumn 
                        targetProperty="name" 
                        dataType="String">
                        <Text text="Driver Name" />
                    </cc:SortFilterColumn>
                    <cc:SortFilterColumn 
                        targetProperty="nationality"
                        dataType="String">
                        <Text text="Nationality" />
                    </cc:SortFilterColumn>
                    <cc:SortFilterColumn 
                        targetProperty="number"
                        dataType="Number">
                        <Text text="Number" />
                    </cc:SortFilterColumn>
                    <cc:SortFilterColumn 
                        targetProperty="birthday"
                        dataType="Date"
                        filterPropertyBindingType="sap.ui.model.type.Date"
                        filterPropertyBindingFormatOptions="{
                            pattern: 'dd.MM.yyyy',
                            source: {
                                pattern: 'dd.MM.yyyy' 
                            }
                        }">
                        <Text text="Birthday" />
                    </cc:SortFilterColumn>
                    <cc:SortFilterColumn 
                        targetProperty="team"
                        dataType="String">
                        <Text text="Team" />
                    </cc:SortFilterColumn>
                </cc:columns>
                <cc:items>
                    <ColumnListItem vAlign="Middle"
                        type="Navigation">
                        <cells>
                            <Text text="{data>name}" />
                            <Text text="{data>nationality}" />
                            <Text text="{data>number}" />
                            <Text text="{
                                path: 'data>birthday',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd.MM.yyyy',
                                    source: {
                                        pattern: 'dd.MM.yyyy' 
                                    }
                                }
                            }" />
                            <Text text="{data>team}" />
                        </cells>
                    </ColumnListItem>
                </cc:items>
            </cc:SortFilterTable>

            <Table items="{
                path: 'data>/drivers',
                sorter: {
                    path: 'name'
                }
            }"
                autoPopinMode="true"
                id="table">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Formula 1 Drivers"
                            level="H2" />
                        <ToolbarSpacer />
                        <Button press="onOpenSortDialogPressed"
                            icon="sap-icon://sort"
                            tooltip="Sort" />
                        <Button press="onOpenFilterDialogPressed"
                            icon="sap-icon://filter"
                            tooltip="Filter" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Driver Name" />
                    </Column>
                    <Column>
                        <Text text="Nationality" />
                    </Column>
                    <Column>
                        <Text text="Number" />
                    </Column>
                    <Column>
                        <Text text="Birthday" />
                    </Column>
                    <Column>
                        <Text text="Team" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle"
                        type="Navigation">
                        <cells>
                            <Text text="{data>name}" />
                            <Text text="{data>nationality}" />
                            <Text text="{data>number}" />
                            <Text text="{
                                path: 'data>birthday',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd.MM.yyyy',
                                    source: {
                                        pattern: 'dd.MM.yyyy' 
                                    }
                                }
                            }" />
                            <Text text="{data>team}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
