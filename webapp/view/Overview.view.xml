<mvc:View controllerName="com.lichter.mobilesortfilter.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page"
        title="{i18n>title}">
        <content>
            <Table items="{
                path: 'data>/drivers',
                sorter: {
                    path: 'name'
                }
            }"
                autoPopinMode="true"
                id="table">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Formula 1 Drivers"
                            level="H2" />
                        <ToolbarSpacer />
                        <Button press="onOpenSortDialogPressed"
                            icon="sap-icon://sort"
                            tooltip="Sort" />
                        <Button press="onOpenFilterDialogPressed"
                            icon="sap-icon://filter"
                            tooltip="Filter" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Driver Name" />
                    </Column>
                    <Column>
                        <Text text="Nationality" />
                    </Column>
                    <Column>
                        <Text text="Number" />
                    </Column>
                    <Column>
                        <Text text="Birthday" />
                    </Column>
                    <Column>
                        <Text text="Team" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle"
                        type="Navigation">
                        <cells>
                            <Text text="{data>name}" />
                            <Text text="{data>nationality}" />
                            <Text text="{data>number}" />
                            <Text text="{data>birthday}" />
                            <Text text="{data>team}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
